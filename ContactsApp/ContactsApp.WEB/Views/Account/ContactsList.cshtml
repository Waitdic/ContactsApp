@{
    ViewData["Title"] = "ContactsList";
}
@model List<ContactsApp.DAL.Models.Contact>;

<h1 class="modal-header">Список контактов</h1>
<div align="left" class="tab-content">
    <div>
        <table >
        @if (Model != null)
        {
            @for (var i = 0; i < Model.Count; i++)
             {
                 <tr>
                     <td>@i</td>
                     <td>@Model[i].Name</td>
                     <td>@Model[i].Surname</td>
                 </tr>
             }
        }
        </table>
    </div>
    
    <div align="left">
        <a type="submit" class="btn btn-sm btn-primary" asp-action="AddCountact">Добавить контанкт</a>
    </div>
</div>


<form></form>